<div class="full-screen bg-light d-flex justify-content-center align-items-center">
    <div class="card mb-2" style="width: 30rem;">
        <%= form_with(model: @post, url: posts_path, local: true) do |form| %>
            <%= image_tag (@post.image.url) if @post.image && @post.image.url%>
            <%= form.hidden_field  :image_cache %>
            <div class="card-body">
            <p class="card-text"><%= @post.content %></p>
            <%= form.hidden_field :content %>
            <%= form.hidden_field :user_id %>
            <%= form.submit 'Confirm', class: "btn btn-primary" %>
            </div>
        <%end%>
        <%= form_with(model: @post, url: new_post_path, local: true, method: 'get') do |form| %>
            <%= form.hidden_field :image_cache %>
            <%= form.hidden_field :content %>
            <%= form.submit "back", name: 'back', class: "btn btn-success"  %>
        <% end %>
    </div>
</div>